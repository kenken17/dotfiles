# Enable bluetooth
systemctl start bluetooth
systemctl enable bluetooth

# Install LTS
pacman -S linux-lts linux-lts-headers
grub-mkconfig -o /boot/grub/grub.cfg

# Firewall
pacman -S ufw
ufw enable
systemctl enable ufw.service

# Remove unuse packages
pacman -Rns $(pacman -Qtdq)

# Optimize pacman DB
pacman-optimize

# Check for errors
systemctl --failed

journalctl -p 3 -xb

# Add in AUR helper yay
git clone https://aur.archlinux.org/yay.git
cd yay
makepkg -si

# Install Google
yay google-chrome

# NodeJS and NPM
pacman -S nodejs npm

# Tmux
pacman -S tmux

# Oh My Tmux
cd
git clone https://github.com/gpakosz/.tmux.git
ln -s -f .tmux/.tmux.conf

# GitKraken
yay -S gitkraken

# JDK
yay -S jdk

# Virtual box
pacman -S virtualbox (use *-arch)

# Chinese IME
pacman -S ibus-libpinyin

# CJK Font
pacman -S dobe-source-han-serif-otc-fonts
pacman -S dobe-source-han-sans-otc-fonts

# Nerd Font
yay -S nerd-fonts-complete






