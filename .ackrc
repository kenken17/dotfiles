# only search with case sensitivity if there is mixed case
--smart-case

# follow symlinks
--follow

--color
--sort-files

--ignore-dir=build
--ignore-dir=coverage
--ignore-dir=node_modules
--ignore-dir=dist
--ignore-dir=.serverless
--ignore-dir=.git
--ignore-dir=.nyc_output
--ignore-dir=.idea
--ignore-dir=.vscode

# Don't search generated files
--ignore-file=is:.gitignore
--ignore-file=is:.tags
--ignore-file=is:tags
